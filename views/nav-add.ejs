<% include ./common/_meta.ejs %>

<title>新增图片</title>
<link href="lib/webuploader/0.1.5/webuploader.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div class="page-container">
	<form class="form form-horizontal" id="form-nav-add" name="form-nav-add" method="post" action="/addnav">
		
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>导航栏名称：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" name="nav">
			</div>
		</div>
		
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2">url：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" name="url" placeholder="为空则代表仅做展示作用">
			</div>
		</div>
		
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>所属分类：</label>
			<div class="formControls col-xs-8 col-sm-9"> <span class="select-box">
				<select name="navid" class="select">
					
					<option value="1">进驻部门</option>
					<option value="2">其他事务</option>

				</select>
				</span> 
			</div>
		</div>

		<div class="row cl">
			<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
				<!-- <button  class="btn btn-primary radius" type="button"><i class="Hui-iconfont">&#xe632;</i> 上传</button> -->
				<input type="submit" name="btnUp" class="btn btn-primary" value="添加">
			</div>
		</div>
	</form>
</div>
</div>

<% include ./common/_footer.ejs %>
<script type="text/javascript">
    $(document).ready(function(){    
        $("#form-nav-add").validate({  
            rules: {  
                nav: {  
                    required: true  
                },  
                url:{  
                    required: true            
                },  
                navid:{  
                    required:true  
                } 
            },  
            messages: {  
                nav: {  
                    required: "请输入导航栏名称"  
                },  
                url: {  
                    required: "请输入url"  
                },  
                navid:{  
                    required: "请选择分类"  
                } 
            }
             
        });  
    });  
  
      
</script>  
</body>
</html>