/*删除*/
function del(obj,id){
	layer.confirm('确认要删除吗？',function(index){
		$.ajax({
			type : 'post',
			data : {id:id},
			url  : '/delpicture',
			dataType : 'json',
			success : function(data){
				layer.close(index);
				if(data.status){
					$(obj).parents("tr").remove();
					layer.alert('已删除!');
				}else{
					layer.alert('由于系统原因，删除失败');
				}
			},
			error : function(data){
				layer.alert('由于系统原因，删除失败');
			}
		});
	
	});
}

</script> 
